    "fastify": "^5.1.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.19.2",
